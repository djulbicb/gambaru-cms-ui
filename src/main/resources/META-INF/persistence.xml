<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="gambaru-entity-manager">
        <class>com.example.gambarucmsui.adapter.out.persistence.entity.UserEntity</class>
        <class>com.example.gambarucmsui.adapter.out.persistence.entity.BarcodeEntity</class>
        <class>com.example.gambarucmsui.adapter.out.persistence.entity.TeamEntity</class>
        <class>com.example.gambarucmsui.adapter.out.persistence.entity.UserAttendanceEntity</class>
        <class>com.example.gambarucmsui.adapter.out.persistence.entity.UserMembershipPaymentEntity</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="jakarta.persistence.jdbc.url"    value="jdbc:mysql://localhost:3306/gambaru" />
            <property name="jakarta.persistence.jdbc.user"   value="gambaru" />
            <property name="jakarta.persistence.jdbc.password" value="password" />

            <!-- Generate the database schema -->
            <property name="javax.persistence.schema-generation.database.action" value="update"/>

            <!-- Customize the schema generation behavior -->
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
            <property name="javax.persistence.schema-generation.scripts.action" value="none"/>
        </properties>
    </persistence-unit>
</persistence>